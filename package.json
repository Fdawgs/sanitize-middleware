{
	"name": "sanitize-middleware",
	"version": "4.0.1",
	"description": "Connect/Express middleware that sanitizes and escapes requests to protect against cross-site scripting (XSS) and command injection attacks",
	"keywords": [
		"express",
		"middleware",
		"sanitization",
		"sanitize",
		"sanitisation",
		"sanitise",
		"xss"
	],
	"main": "dist/index.js",
	"repository": "git@github.com:Fdawgs/sanitize-middleware.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"engines": {
		"node": ">=10.22.0"
	},
	"scripts": {
		"build-ts": "tsc && prettier dist/*.js --write",
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"jest": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand",
		"jest-coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
		"lint": "eslint . --cache --ext ts,tsx --ignore-path .gitignore",
		"lint:prettier": "prettier . --write --ignore-path .gitignore",
		"lint:prettier:ci": "prettier . --check --ignore-path .gitignore",
		"test": "cross-env NODE_ENV=test yarn lint && yarn jest"
	},
	"jest": {
		"clearMocks": true,
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.json"
			}
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"tsx"
		],
		"testEnvironment": "node",
		"testTimeout": 10000,
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		}
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"@types/express": "^4.17.9",
		"@types/faker": "^5.1.5",
		"@types/html-entities": "^1.2.16",
		"@types/jest": "^26.0.15",
		"@types/lodash": "^4.14.165",
		"@types/node": "^14.14.10",
		"@types/serialize-javascript": "^4.0.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"conventional-changelog-cli": "^2.1.1",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.14.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-jsdoc": "^30.7.8",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"express": "^4.17.1",
		"faker": "^5.1.0",
		"jest": "^26.6.3",
		"jsinspect": "^0.12.7",
		"lodash": "^4.17.20",
		"node-mocks-http": "^1.9.0",
		"prettier": "2.2.1",
		"ts-jest": "^26.4.4",
		"typescript": "^4.1.2"
	},
	"dependencies": {
		"html-entities": "^1.3.1",
		"serialize-javascript": "^5.0.1",
		"validator": "^13.5.1"
	}
}
