{
	"name": "sanitize-middleware",
	"version": "2.0.4",
	"description": "Connect/Express middleware that sanitizes requests to protect against cross-site scripting (XSS) and command injection attacks",
	"keywords": [
		"express",
		"middleware",
		"sanitization",
		"sanitize",
		"sanitisation",
		"sanitise",
		"xss"
	],
	"main": "src/index.js",
	"repository": "git@github.com:Fdawgs/sanitize-middleware.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/**/*.js",
		"prettier": "prettier ** --write",
		"start": "node src/index.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage",
		"test-only": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"conventional-changelog-cli": "^2.0.31",
		"coveralls": "^3.0.11",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-json": "^2.1.1",
		"jest": "^25.2.7",
		"jsinspect": "^0.12.7",
		"node-mocks-http": "^1.8.1",
		"prettier": "2.0.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"moment": "^2.24.0",
		"sanitize-html": "^1.22.1",
		"validator": "^13.0.0",
		"xss": "^1.0.6"
	}
}
